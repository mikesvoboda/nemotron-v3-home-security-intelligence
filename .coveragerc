# Coverage configuration (see pyproject.toml for full coverage policy documentation)
# Standard coverage threshold: 95% per CLAUDE.md

[run]
source = backend
omit =
    backend/tests/*
    backend/examples/*
    backend/main.py
    */__pycache__/*
    */.venv/*
    */venv/*

[report]
exclude_lines =
    pragma: no cover
    def __repr__
    raise NotImplementedError
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    @abstractmethod
# Standard 95% threshold - do not lower without documented reason
fail_under = 95
show_missing = true
precision = 2

[html]
directory = coverage/backend
