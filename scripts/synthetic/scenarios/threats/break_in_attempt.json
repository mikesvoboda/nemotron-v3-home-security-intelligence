{
  "id": "break_in_attempt",
  "category": "threats",
  "name": "Break-In Attempt",
  "description": "An active attempt to force entry into the property through a door or window. This is a critical threat scenario requiring immediate response.",

  "scene": {
    "location": "front_door",
    "camera_type": "doorbell",
    "camera_effects": ["fisheye_distortion", "motion_blur"],
    "timestamp_overlay": true,
    "resolution": "1080p"
  },

  "environment": {
    "time_of_day": "night",
    "lighting": "minimal_ambient",
    "weather": "clear",
    "season": "winter"
  },

  "subjects": [
    {
      "type": "person",
      "role": "intruder",
      "appearance": {
        "clothing": "dark_clothing",
        "face_visible": false,
        "mask_or_face_covering": true,
        "gloves": true,
        "holding_item": "pry_bar"
      },
      "action": "forcing_entry",
      "position": "at_door",
      "duration_sec": 20,
      "behavior_notes": "Attempting to pry open the front door with a tool, aggressive movements, looking around for witnesses"
    }
  ],

  "expected_outputs": {
    "detections": [
      { "class": "person", "min_confidence": 0.70, "count": 1 }
    ],
    "face": {
      "detected": false,
      "count": 0,
      "visible": false
