      "is_suspicious": true
    },
    "clothing": {
      "type": "jacket_hoodie",
      "color": "dark",
      "is_suspicious": true
    },
    "threats": {
      "has_threat": true,
      "types": ["break_in", "burglary_tool"],
      "max_severity": "critical"
    },
    "violence": {
      "detected": false,
      "confidence_threshold": 0.5
    },
    "risk": {
      "min_score": 85,
      "max_score": 100,
      "level": "critical",
      "expected_factors": ["forced_entry_attempt", "nighttime", "face_concealed", "tools_visible", "aggressive_behavior"]
    },
    "florence_caption": {
      "must_contain": ["person", "door"],
      "must_not_contain": ["delivery", "resident", "welcome"]
